{
  "name": "@incremark/svelte",
  "version": "0.2.6",
  "description": "Incremark Svelte 5 集成",
  "type": "module",
  "svelte": "./dist/index.js",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./components/*": {
      "types": "./dist/components/*.svelte.d.ts",
      "svelte": "./dist/components/*.svelte",
      "default": "./dist/components/*.svelte"
    },
    "./style.css": "@incremark/theme/styles.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "svelte-package -i src -o dist --tsconfig tsconfig.json",
    "dev": "svelte-package -i src -o dist -w --tsconfig tsconfig.json"
  },
  "dependencies": {
    "@incremark/core": "workspace:*",
    "@incremark/devtools": "workspace:*",
    "@incremark/shared": "workspace:*",
    "@incremark/theme": "workspace:*",
    "shiki": "^3.20.0"
  },
  "peerDependencies": {
    "svelte": "^5.0.0",
    "mermaid": "^10.0.0 || ^11.0.0",
    "katex": "^0.16.0"
  },
  "peerDependenciesMeta": {
    "mermaid": {
      "optional": true
    },
    "katex": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/mdast": "^4.0.0",
    "@sveltejs/package": "^2.4.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "svelte": "^5.0.0",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "markdown",
    "svelte",
    "svelte5",
    "streaming",
    "ai"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kingshuaishuai/incremark.git",
    "directory": "packages/svelte"
  },
  "homepage": "https://www.incremark.com/"
}

