{
  "name": "@incremark/vue",
  "version": "0.1.1",
  "description": "Incremark Vue 3 集成",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./dist/index.js"
    },
    "./components/*": {
      "import": "./src/components/*.vue"
    },
    "./style.css": "./dist/index.css"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch"
  },
  "dependencies": {
    "@incremark/core": "workspace:*",
    "@incremark/devtools": "workspace:*",
    "shiki": "^3.20.0"
  },
  "peerDependencies": {
    "vue": "^3.3.0",
    "mermaid": "^10.0.0 || ^11.0.0",
    "katex": "^0.16.0"
  },
  "peerDependenciesMeta": {
    "mermaid": {
      "optional": true
    },
    "katex": {
      "optional": true
    }
  },
  "devDependencies": {
    "@vue/compiler-sfc": "^3.4.0",
    "esbuild-plugin-vue3": "^0.4.2",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vue": "^3.4.0"
  },
  "keywords": [
    "markdown",
    "vue",
    "vue3",
    "streaming",
    "ai"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kingshuaishuai/incremark.git",
    "directory": "packages/vue"
  },
  "homepage": "https://www.incremark.com/"
}
